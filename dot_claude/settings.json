{
  "permissions": {
    "allow": [
      "Read(*)",
      "NotebookRead(*)",
      "Glob(*)",
      "Grep(*)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Edit(*)",
      "MultiEdit(*)",
      "Write(*)",
      "NotebookEdit(*)",
      "ExitPlanMode"
    ],
    "ask": [
      "TodoWrite(*)",
      "Task(*)",
      "Bash",
      "BashOutput(*)",
      "KillBash(*)"
    ],
    "defaultMode": "plan",
    "disableBypassPermissionsMode": "disable"
  },
  "alwaysThinkingEnabled": true
}